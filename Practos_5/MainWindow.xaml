<Window x:Class="Practos_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practos_5"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800">
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Авторизация " Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Логин" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Пароль" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="loginTBX" Grid.Row="1" VerticalAlignment="Center"/>
        <PasswordBox x:Name="Password" Grid.Row="2" VerticalAlignment="Center"/>
        <Button x:Name="Auth" Content="Авторизация" VerticalAlignment="Bottom" Grid.Row="2" Click="Auth_Click"/>
        
    </Grid>
</Window>
